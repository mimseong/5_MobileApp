<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:id="@+id/moment_ok_btn"
        android:layout_gravity="right"
        android:text="완료"
        android:textSize="15sp"
        android:background="#00ff0000"
        style="?android:attr/borderlessButtonStyle"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:id="@+id/moment_selected_photo"
        android:background="@drawable/round_button_1"
        android:layout_margin="30dp"
        >



        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_moment_black"
            android:layout_gravity="center"
            android:layout_weight="1"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/moment_date_img"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_calendar"
            />
        <TextView
            android:id="@+id/moment_date_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="날짜 받아오기"
            android:layout_marginLeft="10dp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/moment_map_img"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_map_pin"
            />
        <TextView
            android:id="@+id/moment_map_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="GPS 위치 받아오기"
            android:layout_marginLeft="10dp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/moment_comment_img"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_chat_2"
            />
        <TextView
            android:id="@+id/moment_comment_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="클릭하여 코멘트를 남기세요."
            android:layout_marginLeft="10dp"
            />

    </LinearLayout>






</LinearLayout>